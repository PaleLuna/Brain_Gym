<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textStyleBlack">
        <item name="android:fontFamily">@font/toyz</item>
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textButtonStyle" parent="@style/Widget.MaterialComponents.Button">

        <item name="android:background">@drawable/bg_button</item>

        <item name="android:fontFamily">@font/toyz</item>
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textStyleWhiteOutline">


        <item name="android:fontFamily">@font/toyz</item>
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>
    
    <style name="shadowStyle">
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:shadowColor">@color/dark_blue</item>
        <item name="android:shadowRadius">10</item>
    </style>
</resources>